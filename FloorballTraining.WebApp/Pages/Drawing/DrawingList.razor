@page "/tags"
@using Variant = MudBlazor.Variant
@inject NavigationManager NavigationManager
<MudText Typo="Typo.h4">Štítky</MudText>

<MudPaper Elevation="0" Class="d-block gap-4">
<SearchComponent OnSearchItem="OnSearchItem"/>
<MudChip T="string" Icon="@Icons.Material.Filled.Add" Variant="Variant.Outlined" Color="Color.Success" OnClick="AddNewTag">Přidat štítek</MudChip>
<TagListComponent SearchText="@_searchString"/>
</MudPaper>
@code {

    private string _searchString = string.Empty;

    private void OnSearchItem(string searchString)
    {
        _searchString = searchString;
    }

    private void AddNewTag()
    {
        NavigationManager.NavigateTo("/addtag");
    }
}
