@page "/clubs"
@inject NavigationManager NavigationManager
<MudText Typo="Typo.h4">Kluby</MudText>

<MudPaper Elevation="0" Class="d-block gap-4">
    <SearchComponent OnSearchItem="OnSearchItem"/>
    <MudChip Icon="@Icons.Material.Filled.Add" Variant="Variant.Outlined" Color="Color.Success" OnClick="AddNewClub">Přidat klub</MudChip>
    <ClubListComponent SearchText="@_searchString"/>
</MudPaper>
@code {

    private string _searchString = string.Empty;

    private void OnSearchItem(string searchString)
    {
        _searchString = searchString;
    }

    private void AddNewClub()
    {
        NavigationManager.NavigateTo("/addclub");
    }
}
