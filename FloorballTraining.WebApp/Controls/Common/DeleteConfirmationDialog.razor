@using Variant = MudBlazor.Variant
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6"><MudIcon Icon="@Icons.Material.Filled.Delete" Class="mr-3"/>Smazání</MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="Typo.body2">Opravdu chcete smazat @Name?</MudText>
    </DialogContent>
    <DialogActions>
        <MudChip T="string" Icon="@Icons.Material.Filled.Cancel" Variant="Variant.Outlined" Color="Color.Error" OnClick="Cancel">Zrušit</MudChip>
        <MudChip T="string" Icon="@Icons.Material.Filled.Delete" Variant="Variant.Outlined" Color="Color.Success" OnClick="Delete">Smazat</MudChip>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance? MudDialog { get; set; }


    [Parameter] public string? Name { get; set; }

    private void Cancel() => MudDialog?.Cancel();

    private void Delete() => MudDialog?.Close(DialogResult.Ok(true, typeof(bool)));
}