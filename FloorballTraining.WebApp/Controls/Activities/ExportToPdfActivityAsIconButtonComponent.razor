@inject IExportService<ActivityDto> ExportService
@inject NavigationManager NavigationManager;

<MudIconButton T="string" Disabled="@Disabled" Icon="@Icons.Material.Filled.PictureAsPdf" Color="Color.Success" OnClick="()=>ExportToPdf()"/>

@code {
    [Parameter]
    public ActivityDto Activity { get; set; } = new();

    [Parameter]
    public bool Disabled { get; set; }

    private void ExportToPdf()
    {
        ExportService.ExportToPdf(Activity.Id, Activity.Name, NavigationManager.Uri);
    }

}