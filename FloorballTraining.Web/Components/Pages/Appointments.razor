@page "/appointments"
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@inject DialogService DialogService
@inject ContextMenuService ContextMenuService
@inject TooltipService TooltipService
@inject NotificationService NotificationService

@inject FloorballTrainingConfigurationService FloorballTrainingConfigurationService

<PageTitle>Appointments</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Appointments" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"   AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@appointments" TItem="FloorballTraining.Web.Models.FloorballTrainingConfiguration.Appointment" RowSelect="@EditRow">
            <Columns>
                <RadzenDataGridColumn TItem="FloorballTraining.Web.Models.FloorballTrainingConfiguration.Appointment" Property="Id" Title="Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="FloorballTraining.Web.Models.FloorballTrainingConfiguration.Appointment" Property="Name" Title="Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="FloorballTraining.Web.Models.FloorballTrainingConfiguration.Appointment" Property="Description" Title="Description">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="FloorballTraining.Web.Models.FloorballTrainingConfiguration.Appointment" Property="Start" Title="Start">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="FloorballTraining.Web.Models.FloorballTrainingConfiguration.Appointment" Property="End" Title="End">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="FloorballTraining.Web.Models.FloorballTrainingConfiguration.Appointment" Property="AppointmentType" Title="Appointment Type">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="FloorballTraining.Web.Models.FloorballTrainingConfiguration.Appointment" Property="RepeatingPatternId" Title="Repeating Pattern Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="FloorballTraining.Web.Models.FloorballTrainingConfiguration.Appointment" Property="Place.Name" Title="Place">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="FloorballTraining.Web.Models.FloorballTrainingConfiguration.Appointment" Property="Team.Name" Title="Team">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="FloorballTraining.Web.Models.FloorballTrainingConfiguration.Appointment" Property="Appointment1.Name" Title="Appointment1">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="FloorballTraining.Web.Models.FloorballTrainingConfiguration.Appointment" Property="Training.Name" Title="Training">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="FloorballTraining.Web.Models.FloorballTrainingConfiguration.Appointment" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="appointment">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, appointment)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
@code {

    protected IEnumerable<FloorballTraining.Web.Models.FloorballTrainingConfiguration.Appointment> appointments;

    protected RadzenDataGrid<FloorballTraining.Web.Models.FloorballTrainingConfiguration.Appointment> grid0;
    protected override async Task OnInitializedAsync()
    {
        appointments = await FloorballTrainingConfigurationService.GetAppointments(new Query { Expand = "Place,Team,Appointment1,Training" });
    }

    protected async Task AddButtonClick(MouseEventArgs args)
    {
        await DialogService.OpenAsync<AddAppointment>("Add Appointment", null);
        await grid0.Reload();
    }

    protected async Task EditRow(FloorballTraining.Web.Models.FloorballTrainingConfiguration.Appointment args)
    {
        await DialogService.OpenAsync<EditAppointment>("Edit Appointment", new Dictionary<string, object> { {"Id", args.Id} });
    }

    protected async Task GridDeleteButtonClick(MouseEventArgs args, FloorballTraining.Web.Models.FloorballTrainingConfiguration.Appointment appointment)
    {
        try
        {
            if (await DialogService.Confirm("Are you sure you want to delete this record?") == true)
            {
                var deleteResult = await FloorballTrainingConfigurationService.DeleteAppointment(appointment.Id);

                if (deleteResult != null)
                {
                    await grid0.Reload();
                }
            }
        }
        catch (Exception ex)
        {
            NotificationService.Notify(new NotificationMessage
            {
                Severity = NotificationSeverity.Error,
                Summary = $"Error",
                Detail = $"Unable to delete Appointment"
            });
        }
    }
}
