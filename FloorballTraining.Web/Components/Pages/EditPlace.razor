@page "/edit-place"
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@inject DialogService DialogService
@inject ContextMenuService ContextMenuService
@inject TooltipService TooltipService
@inject NotificationService NotificationService

@inject FloorballTrainingConfigurationService FloorballTrainingConfigurationService

<PageTitle>Edit Place</PageTitle>

    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save Place</RadzenAlert>
        <RadzenTemplateForm TItem="FloorballTraining.Web.Models.FloorballTrainingConfiguration.Place" Data="@place" Visible="@(place != null)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="Name" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@place.Name" Name="Name" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="Name" Text="Name is required" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="Width" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@place.Width" Name="Width" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="Width" Text="Width is required" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="Length" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@place.Length" Name="Length" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="Length" Text="Length is required" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="Environment" Variant="Variant.Outlined">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@place.Environment" Name="Environment" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="Environment" Text="Environment is required" />
                  </Helper>
            </RadzenFormField>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

@code {

    [Parameter]
    public int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        place = await FloorballTrainingConfigurationService.GetPlaceById(Id);
    }
    protected bool errorVisible;
    protected FloorballTraining.Web.Models.FloorballTrainingConfiguration.Place place;

    protected async Task FormSubmit()
    {
        try
        {
            await FloorballTrainingConfigurationService.UpdatePlace(Id, place);
            DialogService.Close(place);
        }
        catch (Exception ex)
        {
            errorVisible = true;
        }
    }

    protected async Task CancelButtonClick(MouseEventArgs args)
    {
        DialogService.Close(null);
    }
}
