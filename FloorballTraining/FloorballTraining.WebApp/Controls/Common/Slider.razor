<div id="rc-@_id" style="@Style">
    <input name="slider" type="range" min="@MinValue" max="@MaxValue" @bind="@InputValue" @bind:event="oninput" />
</div>
@code
{


    int _value = 0;
    [Parameter] public int Width { get; set; } = 200;
    [Parameter] public int Value { get; set; }
    [Parameter] public int MinValue { get; set; } = 0;
    [Parameter] public int MaxValue { get; set; } = 100;
    [Parameter] public string Style { get; set; } = string.Empty;

    [Parameter]
    public Color Color { get; set; } = Color.Primary;

    
    
    public int InputValue{
        get => _value;
        set
        {
            

            if (_value.Equals(value))
                return;
            _value = value;
            
            ValueChanged.InvokeAsync(_value);
        }
    }
    
    [Parameter] public EventCallback<int> ValueChanged { get; set; }
    readonly string _id = Guid.NewGuid().ToString().Replace("-", "")[15..];

    protected override void OnInitialized()
    {
        InputValue = Value;
    }

    
}