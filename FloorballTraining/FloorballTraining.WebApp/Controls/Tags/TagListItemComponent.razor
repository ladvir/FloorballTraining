@inject NavigationManager NavigationManager

@if (Tags.Any())
{
    foreach (var tag in Tags)
    {

        <RowTemplate>
            <MudTd DataLabel="Název">@tag.Name</MudTd>
            <MudTd DataLabel="Předek">@tag.ParentTag?.Name</MudTd>
            <MudTd DataLabel="Náhled"><MudChip Size="Size.Small" Text="@tag.Name" Value="@tag.TagId" Style="@($"background-color:{tag.Color}; color:white;")" /></MudTd>
            <MudTd >
                <MudIconButton Icon="@Icons.Material.Filled.Add" Size="Size.Small" Color="Color.Success" OnClick="()=>EditTag(tag)" DisableElevation="true" Variant="Variant.Filled" />
            </MudTd>
        </RowTemplate>
    }
}


@code {
    [Parameter]
    public List<Tag> Tags { get; set; } = new List<Tag>();

    private void EditTag(Tag tag)
    {
        NavigationManager.NavigateTo($"/edittag/{tag.TagId}");
    }
}