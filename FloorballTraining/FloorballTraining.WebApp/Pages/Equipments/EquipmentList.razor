@page "/equipments"
@inject NavigationManager NavigationManager
<MudText Typo="Typo.h4">Vybavení</MudText>

<SearchComponent OnSearchItem="OnSearchItem"/>

<MudChip Icon="@Icons.Material.Filled.Add" Variant="Variant.Outlined" Color="Color.Success" OnClick="AddEquipment">Přidat vybavení</MudChip>

<EquipmentListComponent SearchText="@_searchString"/>

@code {

    private string _searchString = string.Empty;

    private void OnSearchItem(string searchString)
    {
        _searchString = searchString;
    }

    private void AddEquipment()
    {
        NavigationManager.NavigateTo("/addequipment");
    }
}
