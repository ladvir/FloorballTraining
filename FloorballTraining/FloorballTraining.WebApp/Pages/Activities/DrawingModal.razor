@using FloorballTraining.WebApp.Data
<MudDialog >
<DialogContent>
        <DrawingToolComponent DrawingAsJson="@DrawingAsJson" OnDrawingChanged="ConfirmSelection" />
    
</DialogContent>
</MudDialog>


@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = new MudDialogInstance();

    [Parameter]
    public string DrawingAsJson { get; set; } = string.Empty;

    [Parameter]
    public EventCallback<DrawingResult> OnDrawingCreated { get; set; }


    void ConfirmSelection(DrawingResult drawing)
    {
        DrawingAsJson = drawing.Json;
        var result = DialogResult.Ok(drawing, drawing.GetType());
        MudDialog.Close(result);
    }

    void Close()
    {
        MudDialog.Close(DialogResult.Cancel());
    }

}




