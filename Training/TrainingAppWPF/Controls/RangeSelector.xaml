<UserControl x:Class="TrainingAppWPF.Controls.RangeSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TrainingAppWPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Canvas Width="210">

            <Slider SmallChange="1" Width="200" Canvas.Left="5" Canvas.Top="10" Maximum="20" ValueChanged="Slider_ValueChanged" Name="Slider" Value="4"  IsSelectionRangeEnabled="True" SelectionStart="0" SelectionEnd="20" Height="20" />

            <Thumb Height="20" Width="10" Canvas.Left="0" Canvas.Top="10" Panel.ZIndex="1" Name="ThumbLeft" DragDelta="ThumbLeft_DragDelta"/>

            <Thumb Height="20" Width="10" Canvas.Left="200" Canvas.Top="10" Panel.ZIndex="1" Name="ThumbRight" DragDelta="ThumbRight_DragDelta"/>

        </Canvas>

    </Grid>
</UserControl>
